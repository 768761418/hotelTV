<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data/>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--        位置栏-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        tools:ignore="MissingConstraints">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_location"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="当前位置:"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/hospital_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="当前位置:"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>


    <!--        按键栏-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:id="@+id/hospital_up"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/hospital_web_border"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:visibility="invisible">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上一页"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_marginLeft="2dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/hospital_next"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/hospital_web_border"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:visibility="invisible">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下一页"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_marginLeft="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hospital_comeback"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/hospital_web_border"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:focusableInTouchMode="true"
            android:focusable="true">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/icon_comeback"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_marginLeft="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hospital_index"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/hospital_web_border"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:focusableInTouchMode="true"
            android:focusable="true">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/icon_index"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_marginLeft="2dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>