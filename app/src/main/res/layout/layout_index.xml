<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data></data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.IndexActivity"
        android:screenOrientation="landscape"
        android:fitsSystemWindows="true"
        tools:ignore="MissingClass"
        android:background="@drawable/pc_login_bg">







        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/Index_top"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.25"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toTopOf="parent">


                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintWidth_percent="0.25"
                    android:src="@drawable/logo"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>


                <com.dreamgyf.android.ui.widget.textview.marquee.MarqueeTextView
                    android:id="@+id/tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintWidth_percent="0.35"
                    android:textSize="20sp"
                    android:text="Hello World!"
                    android:textColor="@color/white"
                    app:space="20dp"
                    app:speed="0.5"
                    app:layout_constraintLeft_toRightOf="@id/logo"
                    app:layout_constraintRight_toLeftOf="@+id/Index_time"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/Index_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2023/4/20 周五 15:46"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/Index_time"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:id="@+id/Index_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2023/4/20 周五 15:46"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:id="@+id/Index_sky"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2023/4/20 周五 15:46"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/Index_time"
                    app:layout_constraintBottom_toBottomOf="parent"/>



            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/Index_main"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.65"
                app:layout_constraintTop_toBottomOf="@id/Index_top"
                android:background="@color/black">

                <VideoView
                    android:id="@+id/index_video"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintWidth_percent="0.6"
                    tools:ignore="MissingConstraints" />

               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/index_apk"
                   android:layout_width="0dp"
                   android:layout_height="0dp"
                   app:layout_constraintWidth_percent="0.3"
                   app:layout_constraintHeight_percent="0.95"
                   app:layout_constraintLeft_toRightOf="@id/index_video"
                   app:layout_constraintRight_toRightOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                   />






            </androidx.constraintlayout.widget.ConstraintLayout>






        </androidx.constraintlayout.widget.ConstraintLayout>




<!--        输入框获取数据-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dialog_get_room"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blackFF"
            android:visibility="gone"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/room_and_server"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Room 文本视图 -->
                    <TextView
                        android:id="@+id/text_room"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Room:"
                        android:layout_marginTop="20dp"/>

                    <!-- Room 输入框 -->
                    <EditText
                        android:id="@+id/edit_room"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_room"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:hint="Enter room"/>

                    <!-- Server 文本视图 -->
                    <TextView
                        android:id="@+id/text_server"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/edit_room"
                        android:layout_marginTop="20dp"
                        android:text="Server:"/>

                    <!-- Server 输入框 -->
                    <EditText
                        android:id="@+id/edit_server"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_server"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:hint="Enter server"/>

                    <!-- 确定按钮 -->
                    <Button
                        android:id="@+id/btn_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/edit_server"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:text="确定"/>

                </RelativeLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 侧边栏布局 -->
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/nav_header"
            app:menu="@menu/nav_menu"
            tools:ignore="MissingConstraints"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="电视直播列表"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:padding="8dp"/>

            </LinearLayout>

        </com.google.android.material.navigation.NavigationView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>