<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data></data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/index_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.IndexActivity"
        android:screenOrientation="landscape"
        android:fitsSystemWindows="true"
        tools:ignore="MissingClass"
        >
        <ImageView
            android:id="@+id/index_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/pc_login_bg"/>







        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/index_top"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.25"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <ImageView
                        android:id="@+id/index_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/logo"
                        />
                    <TextView
                        android:id="@+id/index_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="111"
                        android:textColor="@color/white"/>
                </LinearLayout>



                <com.dreamgyf.android.ui.widget.textview.marquee.MarqueeTextView
                    android:id="@+id/index_tv_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintWidth_percent="0.35"
                    android:textSize="20sp"
                    android:text="请输入正确的服务器或检查您的网络状态"
                    android:textColor="@color/white"
                    app:space="20dp"
                    app:speed="0.5"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/header"
                    tools:ignore="MissingConstraints" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.8"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/index_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="default"
                        android:textSize="12sp"
                        android:textColor="@color/white" />
                    <TextView
                        android:id="@+id/index_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="default"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        />
                    <TextView
                        android:id="@+id/index_sky"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="default"
                        android:textSize="12sp"
                        android:textColor="@color/white" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/index_title"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.8"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:orientation="vertical"
                    android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:text="房间号码:"
                            android:textColor="@color/white"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:text="WiFi名称:"
                            android:textColor="@color/white"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:text="WiFi密码:"
                            android:textColor="@color/white"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:text="前台号码:"
                            android:textColor="@color/white"
                            android:layout_weight="1"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.8"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/index_title"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/index_room_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="default"
                        android:textColor="@color/white"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/index_wifi_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="default"
                        android:textColor="@color/white"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/index_wifi_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="default"
                        android:textColor="@color/white"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/index_desk_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="default"
                        android:textColor="@color/white"
                        android:layout_weight="1"/>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/index_main"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.65"
                app:layout_constraintTop_toBottomOf="@id/index_top"
                android:background="@color/black">

                <VideoView
                    android:id="@+id/index_video"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintWidth_percent="0.6"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:id="@+id/index_video_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="请点击选择频道"
                    app:layout_constraintTop_toTopOf="@id/index_video"
                    app:layout_constraintBottom_toBottomOf="@id/index_video"
                    app:layout_constraintLeft_toLeftOf="@id/index_video"
                    app:layout_constraintRight_toRightOf="@id/index_video"
                    android:textColor="@color/white"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintWidth_percent="0.4"
                    app:layout_constraintLeft_toRightOf="@id/index_video"
                    android:background="@color/white">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/index_apk"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintWidth_percent="0.8"
                        app:layout_constraintHeight_percent="0.95"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>







            </androidx.constraintlayout.widget.ConstraintLayout>






        </androidx.constraintlayout.widget.ConstraintLayout>




<!--        输入框获取数据-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dialog_get_room"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blackFF"
            android:visibility="gone"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/room_and_server"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Room 文本视图 -->
                    <TextView
                        android:id="@+id/text_room"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Room:"
                        android:layout_marginTop="20dp"/>

                    <!-- Room 输入框 -->
                    <EditText
                        android:id="@+id/edit_room"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_room"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:hint="Enter room"/>

                    <!-- Server 文本视图 -->
                    <TextView
                        android:id="@+id/text_server"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/edit_room"
                        android:layout_marginTop="20dp"
                        android:text="Server:"/>

                    <!-- Server 输入框 -->
                    <EditText
                        android:id="@+id/edit_server"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_server"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:hint="Enter server"/>

                    <!-- 确定按钮 -->
                    <Button
                        android:id="@+id/btn_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/edit_server"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:text="确定"/>

                </RelativeLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 侧边栏布局 -->
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/nav_header"
            app:menu="@menu/nav_menu"
            tools:ignore="MissingConstraints"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="电视直播列表"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:padding="8dp"/>

            </LinearLayout>

        </com.google.android.material.navigation.NavigationView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>