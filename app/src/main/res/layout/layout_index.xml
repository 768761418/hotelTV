<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data></data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:screenOrientation="landscape"
        tools:context=".Activity.IndexActivity"
        tools:ignore="MissingClass">


        <ImageView
            android:id="@+id/index_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/app_bg" />

<!--        顶部栏-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/index_top"
            android:layout_width="820dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/index_logo"
                    android:layout_width="120dp"
                    android:layout_height="65dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/img"
                    android:padding="10dp"
                    />

                <TextView
                    android:id="@+id/index_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="test"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    />
            </LinearLayout>


            <com.dreamgyf.android.ui.widget.textview.marquee.MarqueeTextView
                android:id="@+id/index_tv_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="请输入正确的服务器或检查您的网络状态"
                android:textSize="20sp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                app:layout_constraintLeft_toRightOf="@+id/header"
                app:layout_constraintRight_toLeftOf="@+id/linearLayout"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:space="20dp"
                app:speed="0.5"
                tools:ignore="MissingConstraints" />


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.8"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/index_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="day"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/index_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="5dp"
                    android:text="time"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/index_sky"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="weather"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>













<!--        底部信息栏-->
        <LinearLayout
            android:id="@+id/index_title"
            android:layout_width="820dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/index_main_layout">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="房间号码:"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/index_room_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="default"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginRight="7dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WiFi名称:"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/index_wifi_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:text="default"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WiFi密码:"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/index_wifi_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:text="default"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="前台号码:"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/index_desk_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="default"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>



<!--        电视和apk列表-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/index_main_layout"
            android:layout_width="820dp"
            android:layout_height="287dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/index_top"
            android:layout_marginTop="20dp">
            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/index_tv"
                android:layout_width="510dp"
                android:layout_height="287dp"
                android:focusable="false"
                android:nextFocusRight="@id/apk1"
                android:nextFocusUp="@null"
                android:nextFocusDown="@null"
                android:src="@drawable/tv_bg"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:layout_marginRight="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:ignore="MissingConstraints" />
            <!--                apk列表-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/index_apk_list"
                android:layout_width="287dp"
                android:layout_height="287dp"
                android:background="@drawable/apk_list_bg"
                app:layout_constraintRight_toRightOf="parent"
                tools:ignore="MissingConstraints">
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp">
                        <LinearLayout
                            android:id="@+id/apk1"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:nextFocusUp="@null">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="10dp"
                                tools:ignore="MissingConstraints"
                                android:gravity="center">
                                <ImageView
                                    android:id="@+id/tv_image"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/icon_tv"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/apk_item_text"
                                    android:textSize="15sp"
                                    android:text="@string/text_tv"
                                    android:layout_gravity="center"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/apk2"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:nextFocusUp="@null"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="10dp"
                                tools:ignore="MissingConstraints"
                                android:gravity="center">
                                <ImageView
                                    android:id="@+id/app"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"

                                    android:src="@drawable/icon_app"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/apk_item_text"
                                    android:textSize="15sp"
                                    android:text="@string/text_app"
                                    android:layout_gravity="center"/>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/apk_layout"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp">
                        <LinearLayout
                            android:id="@+id/apk3"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="10dp"
                                tools:ignore="MissingConstraints"
                                android:gravity="center">
                                <ImageView
                                    android:id="@+id/hotel"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/icon_hospital"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/apk_item_text"
                                    android:textSize="15sp"
                                    android:text="@string/text_hospital"
                                    android:layout_gravity="center"/>
                            </LinearLayout>


                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/apk4"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="10dp"
                                tools:ignore="MissingConstraints"
                                android:gravity="center">
                                <ImageView
                                    android:id="@+id/video"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/icon_video"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/apk_item_text"
                                    android:textSize="15sp"
                                    android:text="@string/text_video"
                                    android:layout_gravity="center"/>
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>




<!--        配置信息框-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/index_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent_color"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="480dp"
                android:layout_height="270dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/input_dialog"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="请配置服务器信息"
                    android:textSize="20sp"
                    android:textColor="@color/setting_text"
                    android:layout_weight="2"
                    android:textStyle="bold"
                    />
                <EditText
                    android:id="@+id/input_server_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="服务器地址"
                    android:layout_marginTop="10dp"
                    android:focusable="true"
                    android:nextFocusRight="@null"
                    android:nextFocusLeft="@null"
                    android:nextFocusUp="@null"
                    android:textColorHint="@color/setting_hint"
                    android:text="@string/default_server"
                    android:textColor="@color/setting_text"
                    android:theme="@style/Base.Theme.HotelTV"
                    android:layout_weight="1"/>
                <EditText
                    android:id="@+id/input_room_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="房间号"
                    android:focusable="true"
                    android:textColorHint="@color/setting_hint"
                    android:layout_marginTop="10dp"
                    android:nextFocusRight="@null"
                    android:nextFocusLeft="@null"
                    android:theme="@style/Base.Theme.HotelTV"
                    android:textColor="@color/setting_text"
                    android:layout_weight="1"/>
                <EditText
                    android:id="@+id/input_tenant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="分组"
                    android:focusable="true"
                    android:layout_marginTop="10dp"
                    android:textColorHint="@color/setting_hint"
                    android:nextFocusRight="@null"
                    android:nextFocusLeft="@null"
                    android:theme="@style/Base.Theme.HotelTV"
                    android:textColor="@color/setting_text"
                    android:layout_weight="1"/>
                <android.widget.Button
                    android:id="@+id/input_submit"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="确定"
                    android:textColorHint="@color/setting_text"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/input_btn"
                    android:focusable="true"
                    android:nextFocusRight="@null"
                    android:nextFocusLeft="@null"
                    android:nextFocusDown="@null"
                    android:padding="5dp"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>