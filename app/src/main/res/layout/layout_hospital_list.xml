<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data></data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:screenOrientation="landscape"
        tools:context=".Activity.IndexActivity"
        tools:ignore="MissingClass">


        <ImageView
            android:id="@+id/hospital_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/app_bg" />



        <com.qb.hotelTV.module.hospital.TopBar
            android:id="@+id/hospital_top"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/hospital_list"
            android:layout_width="900dp"
            android:layout_height="360dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@id/hospital_top"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical"
            android:focusableInTouchMode="false"
            android:focusable="false">
            <LinearLayout
                android:layout_width="900dp"
                android:layout_height="180dp"
                android:orientation="horizontal"
                android:focusableInTouchMode="false"
                android:focusable="false">

                <ImageView
                    android:layout_width="280dp"
                    android:layout_height="170dp"
                    android:src="@color/white"
                    android:layout_marginLeft="20dp"
                    android:focusableInTouchMode="true"
                    android:focusable="true"/>

                <ImageView
                    android:layout_width="280dp"
                    android:layout_height="170dp"
                    android:src="@color/white"
                    android:layout_marginLeft="20dp"
                    android:focusableInTouchMode="true"
                    android:focusable="true"/>

                <ImageView
                    android:layout_width="280dp"
                    android:layout_height="170dp"
                    android:src="@color/white"
                    android:layout_marginLeft="20dp"
                    android:focusableInTouchMode="true"
                    android:focusable="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="900dp"
                android:layout_height="180dp"
                android:orientation="horizontal"
                android:focusableInTouchMode="false"
                android:focusable="false">

                <ImageView
                    android:layout_width="280dp"
                    android:layout_height="170dp"
                    android:src="@color/white"
                    android:layout_marginLeft="20dp"
                    android:focusableInTouchMode="true"
                    android:focusable="true"/>

                <ImageView
                    android:layout_width="280dp"
                    android:layout_height="170dp"
                    android:src="@color/white"
                    android:layout_marginLeft="20dp"
                    android:focusableInTouchMode="true"
                    android:focusable="true"/>

                <ImageView
                    android:layout_width="280dp"
                    android:layout_height="170dp"
                    android:src="@color/white"
                    android:layout_marginLeft="20dp"
                    android:focusableInTouchMode="true"
                    android:focusable="true"/>

            </LinearLayout>

        </LinearLayout>

        <com.qb.hotelTV.module.hospital.BottomBar
            android:id="@+id/bottom_bar"
            android:layout_width="900dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hospital_list"
            app:layout_constraintBottom_toBottomOf="parent"/>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>